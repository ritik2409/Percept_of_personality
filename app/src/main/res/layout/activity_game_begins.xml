<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/living_room"
    tools:context="com.example.android.assessmentgame.GameBegins">

    <ImageView
        android:id="@+id/protagonist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="380dp"
        android:layout_marginRight="380dp"
        android:layout_marginTop="49dp"
        android:src="@drawable/rahul"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="54dp"
        android:layout_marginLeft="185dp"
        android:layout_marginStart="185dp">


        <com.example.android.assessmentgame.TypeWriter
            android:id="@+id/protagonist_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/leftname2"
            android:text="nklnkjjbjbnklnknknjkbjbbjkbjkkjbjjkb"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/protagonist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:text="Main"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>


    <com.example.android.assessmentgame.TypeWriter
        android:id="@+id/pchoice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rl1"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/rl1"
        android:layout_marginBottom="29dp"
        android:background="@drawable/rounded_corner"
        android:onClick="action"
        android:text="Hey what fdg,m g erglkrew gg r"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="gone" />

    <com.example.android.assessmentgame.TypeWriter
        android:id="@+id/pchoice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pchoice1"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/pchoice1"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_corner"
        android:onClick="action"
        android:text="Hey whats upb jh"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="gone" />


    <com.example.android.assessmentgame.TypeWriter
        android:id="@+id/narrator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/narrative2"
        android:text="ndsjbll "
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="54dp"
        android:layout_marginEnd="240dp"
        android:layout_marginRight="240dp">

        <com.example.android.assessmentgame.TypeWriter
            android:id="@+id/other_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rightname2"
            android:text="nklnkjjbjbnklnknknjkbjbbjkbjkkjbjjkb"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/other_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:text="Main"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/other_characters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/protagonist"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/protagonist"
        android:layout_alignTop="@+id/protagonist"
        android:layout_marginLeft="380dp"
        android:layout_marginStart="380dp"
        android:layout_marginTop="49dp"
        android:src="@drawable/smitha"
        android:visibility="visible" />


    <com.example.android.assessmentgame.TypeWriter
        android:id="@+id/ochoice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/other_text"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/other_text"
        android:layout_marginBottom="29dp"
        android:background="@drawable/rounded_corner"
        android:onClick="action"
        android:text="Hey what fdg,m g erglkrew gg r"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="visible" />

    <com.example.android.assessmentgame.TypeWriter
        android:id="@+id/ochoice2"
        android:layout_width="@+id/ochoice1"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ochoice1"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ochoice1"
        android:background="@drawable/rounded_corner"
        android:onClick="action"
        android:text="Hey whats up"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="visible" />


</RelativeLayout>
